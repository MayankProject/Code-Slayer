{
  "name": "Code-Smack",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "build:worker": "cd apps/worker && pnpm build && cd ../..",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "turbo start"
  },
  "devDependencies": {
    "@repo/types": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "next-auth": "^4.24.7"
  }
}
